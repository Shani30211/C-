#include<iostream>
using namespace std;
int main()
{
while(true)
{
int a;
int b;
char c;
cout<<"enter the value of a=";
cin>>a;
cout<<"enter the value of b=";
cin>>b;
cout<<"enter the value of c=";
cin>>c;
if (c=='+')
cout<<a+b<<endl;
else 
if (c=='-')
cout<<a-b<<endl;
else 
if (c=='/')
cout<<a/b<<endl;
else
if(c=='*')
cout<<a*b<<endl;
}
return 0;
}
    
